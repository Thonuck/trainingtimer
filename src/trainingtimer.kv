<ResultItem>:
    orientation: "horizontal"
    datum: ""
    counter: ""

    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.datum
        size_hint_y: None
        height: 30

    Label:
        text: root.counter
        size_hint_y: None
        height: 30

<ResultTableScreen>:
    name: "ResultTable"
    controller: controller
    list_data: list_data
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 30

            Label:
                text: "Datum"
            Label:
                text: "Plank Duration"

        RecycleView:
            id: list_data
            viewclass: "ResultItem"

            SelectableRecycleBoxLayout:
                id: controller

                # key in data to indicate, whether item is selectable or not
                #key_selection: 'selectable'
                default_size: None, dp(30)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: True
                touch_multiselect: True

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Delete"
                on_release: root.del_item()

            Button:
                text: "Back"
                on_release:  app.root.current = "TrainingTimer"

<TrainingtimerScreen>:
    name: "TrainingTimer"
    timer_display: timer_display
    start_stop_button: start_stop_button
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 30
            spacing: 10
            Button:
                text: "Show Results"
                on_release:  app.root.current = "ResultTable"

        Label:
            id: timer_display
            font_size: 50
            text: "{:02d}:{:02d}.{}".format(int(root.counter / 600), int((root.counter/10) % 60), int(root.counter % 10))

        Button:
            size_hint_y: 0.4
            id: start_stop_button
            text: "START"
            font_size: 50
            on_release: root.on_start_stop()
<MyScreenManager>:
    TrainingtimerScreen:
    ResultTableScreen:


<SetTimerWidget>:
    title: "Set the time"
    size_hint: 0.8, 0.8
    id: settimer

    BoxLayout
        orientation: "vertical"
        spacing: 20
        TextInput:
            #size_hint_y: 0.3
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            id: time_value
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size_y: 40
            spacing: 10
            Button:
                text: "ok"
                on_press: root.on_press_ok()
            Button:
                text: "cancel"
                on_press: root.on_press_cancel()

