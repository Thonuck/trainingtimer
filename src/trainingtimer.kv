<ResultItem>:
    orientation: "horizontal"
    datum: ""
    counter: ""

    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.datum
        size_hint_y: None
        height: 30
        text_size: self.size
        valign: "center"
        halign: "left"

    Label:
        text: root.counter
        size_hint_y: None
        height: 30
        text_size: self.size
        valign: "center"
        halign: "left"

<ResultTableScreen>:
    name: "ResultTable"
    controller: controller
    list_data: list_data
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Add New Item"
                on_release: root.add_item()

            Button:
                text: "Delete An Item"
                on_release: root.del_item()

            Button:
                text: "Debug print items"
                on_release: root.print_items()

            Button:
                text: "Save Data"
                on_release: root.save_data()

        RecycleView:
            id: list_data
            viewclass: "ResultItem"

            SelectableRecycleBoxLayout:
                id: controller

                # key in data to indicate, whether item is selectable or not
                #key_selection: 'selectable'
                default_size: None, dp(30)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: True
                touch_multiselect: True


<TrainingtimerScreen>:
    name: "TrainingTimer"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: timer_display
            font_size: 50
            text: "{:02d}:{:02d}".format(int(root.counter / 60), int(root.counter % 60))

        BoxLayout:
            size_hint_y: 0.2
            spacing: 10
            Button:
                text: "Start"
                on_release: root.on_start()
            Button:
                text: "Stop"
                on_release: root.on_stop()
            Button:
                text: "Set"
                on_release: root.counter = 0
            Button:
                text: "Results"
                on_release:  app.root.current = "ResultTable"

<MyScreenManager>:
    TrainingtimerScreen:
    ResultTableScreen:


<SetTimerWidget>:
    title: "Set the time"
    size_hint: 0.8, 0.8
    id: settimer

    BoxLayout
        orientation: "vertical"
        spacing: 20
        TextInput:
            #size_hint_y: 0.3
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            id: time_value
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size_y: 40
            spacing: 10
            Button:
                text: "ok"
                on_press: root.on_press_ok()
            Button:
                text: "cancel"
                on_press: root.on_press_cancel()

